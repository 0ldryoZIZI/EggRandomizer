-- ryobestScripter Pet Randomizer GUI
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local LocalPlayer = Players.LocalPlayer

-- Remove existing GUI
if CoreGui:FindFirstChild("RyobestRandomizerGUI") then
    CoreGui.RyobestRandomizerGUI:Destroy()
end

-- Create main GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RyobestRandomizerGUI"
screenGui.Parent = CoreGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 250)
frame.Position = UDim2.new(0.5, -150, 0.4, -125)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 40)
title.Position = UDim2.new(0, 0, 0, 0)
title.Text = "Pet Randomizer\nmade by ryobestScripter"
title.TextColor3 = Color3.fromRGB(50, 255, 100)
title.TextStrokeTransparency = 0
title.TextScaled = true
title.BackgroundTransparency = 1
title.Parent = frame

-- Helper to create buttons
local function createButton(text, color, y)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -20, 0, 40)
    btn.Position = UDim2.new(0, 10, 0, y)
    btn.BackgroundColor3 = color
    btn.Text = text
    btn.TextScaled = true
    btn.TextColor3 = Color3.new(1,1,1)
    btn.BorderSizePixel = 0
    btn.Parent = frame
    return btn
end

local randomizeBtn = createButton("üé≤ Randomize Pets", Color3.fromRGB(255,115,0), 50)
local espBtn = createButton("üëÅÔ∏è ESP: ON", Color3.fromRGB(60,60,60), 100)
local autoBtn = createButton("üîÑ Auto Randomize: OFF", Color3.fromRGB(0,180,120), 150)
local petAgeBtn = createButton("üìú Load Pet Age 50 Script", Color3.fromRGB(160,100,255), 200)

local espEnabled = true
local autoRandomize = false

espBtn.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    espBtn.Text = "üëÅÔ∏è ESP: " .. (espEnabled and "ON" or "OFF")
end)

autoBtn.MouseButton1Click:Connect(function()
    autoRandomize = not autoRandomize
    autoBtn.Text = "üîÑ Auto Randomize: " .. (autoRandomize and "ON" or "OFF")
end)

petAgeBtn.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://YOUR_HOST/loadpetage50.lua"))()
end)

randomizeBtn.MouseButton1Click:Connect(function()
    for _, egg in pairs(workspace:GetDescendants()) do
        if egg:IsA("Model") and egg:FindFirstChild("Egg") then
            local name = egg.Name
            local billboard = egg:FindFirstChild("NameBillboard") or Instance.new("BillboardGui")
            billboard.Name = "NameBillboard"
            billboard.Size = UDim2.new(0,100,0,20)
            billboard.StudsOffset = Vector3.new(0,3,0)
            billboard.AlwaysOnTop = true
            billboard.Parent = egg

            local label = billboard:FindFirstChild("TextLabel") or Instance.new("TextLabel")
            label.Size = UDim2.new(1,0,1,0)
            label.BackgroundTransparency = 1
            label.Text = "üé≤ " .. name
            label.TextScaled = true
            label.TextColor3 = Color3.fromRGB(255,255,0)
            label.Parent = billboard
        end
    end
end)

task.spawn(function()
    while true do
        task.wait(5)
        if autoRandomize then
            randomizeBtn:MouseButton1Click()
        end
    end
end)
